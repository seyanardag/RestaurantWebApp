@model CreateAboutDtoUI

@{
    ViewData["Title"] = "CreateAbout";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}



<div class="row">
    <div class="col-md-12">

        <form method="post" asp-controller="About" asp-action="CreateAbout" enctype="multipart/form-data">
            <div class="card">
                <div class="card-header">
                    <div class="card-title">Hakkımızda Bilgisi Ekleme</div>
                </div>
                <div class="card-body">
                    <div class="form-group">
                        <label asp-for="Title">Hakkımızda için başlık</label>
                        <input type="text" class="form-control" asp-for="Title">
                    </div>
                    <div class="form-group">
                        <label asp-for="Description">Hakkımızda için açıklama</label>
                        <input type="text" class="form-control" asp-for="Description">
                    </div>                  
                    <div class="form-group">
                        <label asp-for="ImgUrl">Hakkımızda için resim</label>
                        @* <input type="text" class="form-control" asp-for="ImgUrl"> *@
                        <input type="file" class="form-control" asp-for="ImgFile">

                    </div>

                </div>
                <div class="card-action">
                    <button class="btn btn-success" type="submit">Hakkımda bilgisi Ekle</button>
                    <a class="btn btn-danger" asp-controller="About" asp-action="Index">Geri</a>
                </div>
            </div>
        </form>
    </div>

</div>