@model UpdateAboutDtoUI

@{
    ViewData["Title"] = "UpdateAbout";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<div class="row">
    <div class="col-md-12">

        <form method="post" asp-controller="About" asp-action="UpdateAbout" enctype="multipart/form-data">
            <div class="card">
                <div class="card-header">
                    <div class="card-title">Hakkımızda Bilgisi Güncelleme</div>
                </div>
                <div class="card-body">
                    <input type="hidden" asp-for="AboutId" />

                    <div class="form-group">
                        <label asp-for="Title">Hakkımızda için başlık</label>
                        <input type="text" class="form-control" asp-for="Title">
                    </div>
                    <div class="form-group">
                        <label asp-for="Description">Hakkımızda için açıklama</label>
                        <input type="text" class="form-control" asp-for="Description">
                    </div>
                    <div class="form-group">
                        <div>Hakkımızda için resim</div>
                        <div class="border border-3 bg-light rounded p-3">

                            <input type="hidden" class="form-control" asp-for="ImgUrl">
                            <label>Eski görsel</label><br />
                            <img src="@Model.ImgUrl" width="150" height="120" /><br />

                            <label class="mt-3">Yeni görseli seçiniz</label><br />
                            <input class="my-2" type="file" asp-for="ImgFile" />
                        </div>
                    </div>

                </div>
                <div class="card-action">
                    <button class="btn btn-success" type="submit">Güncelle</button>
                    <a class="btn btn-danger" asp-controller="About" asp-action="Index">Geri</a>
                </div>
            </div>
        </form>
    </div>

</div>