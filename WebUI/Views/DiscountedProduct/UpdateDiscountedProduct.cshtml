@model UpdateDiscountedProductDtoUI

@{
    ViewData["Title"] = "UpdateDiscountedProduct";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}



<div class="row">
    <div class="col-md-12">

        <form method="post" asp-controller="DiscountedProduct" asp-action="UpdateDiscountedProduct" enctype="multipart/form-data">
            <div class="card">
                <div class="card-header">
                    <div class="card-title">İndirimli Ürün Bilgisi Ekleme</div>
                </div>
                <div class="card-body">

                    <input type="hidden" asp-for="DiscountedProductId" />

                    <div class="form-group">
                        <label asp-for="Title">İndirimli Ürün Adı</label>
                        <input type="text" class="form-control" asp-for="Title">
                    </div>
                  
                    <div class="form-group">
                        <label asp-for="DiscountRate">İndirim Oranı</label>
                        <input type="number" class="form-control" min="0" max="100" asp-for="DiscountRate">
                    </div>



                    <div class="form-group ">
                        <div>Ürün Görseli</div>
                        <div class="border border-3 bg-light rounded p-3">

                            <input type="hidden" class="form-control" asp-for="ImgUrl">
                            <label>Eski görsel</label><br />
                            <img src="@Model.ImgUrl" width="150" height="120" /><br />

                            <label class="mt-3">Yeni görseli seçiniz</label><br />
                            <input class="my-2" type="file" asp-for="ImgFile" />
                        </div>
                    </div>




                    <div class="form-check">
                        <label>Durum</label><br>
                        <label class="form-radio-label">
                            <input class="form-radio-input" type="radio" asp-for="isActive" value="true" >
                            <span class="form-radio-sign">Mevcut</span>
                        </label>
                        <label class="form-radio-label ml-3">
                            <input class="form-radio-input" type="radio" asp-for="isActive" value="false">
                            <span class="form-radio-sign">Mevcut Değil</span>
                        </label>
                    </div>


                </div>
                <div class="card-action">
                    <button class="btn btn-success" type="submit">Güncelle</button>
                    <a class="btn btn-danger" asp-controller="DiscountedProduct" asp-action="Index">Geri</a>
                </div>
            </div>
        </form>
    </div>

</div>



