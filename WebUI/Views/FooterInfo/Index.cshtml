@model List<ResultFooterInfoDtoUI>

@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/AdminLayout/Index.cshtml";
	int count = 1;
}


<div class="row">
	<div class="col-md-12">
		<div class="card">
			<div class="card-header">
				<div class="card-title">Footer Info Listesi</div>
			</div>
			<div class="card-body">
				<div class="card-sub">
					<p class="fw-bold text-danger" text-danger">Tema bütünlüğü açısından Web sitesinde sadece bir footer bilgisi gösterilebilir. </p>
					<p class="fw-bold text-danger">Bu listede aktif olarak seçilen footer bilgilerinden ilki baz alınacaktır. </p>
				</div>
				<table class="table mt-3">
					<thead>
						<tr>
							<th scope="col">#</th>
							<th scope="col">Başlık</th>
							<th scope="col">Metin</th>
							<th scope="col">Durum</th>
							
							<th scope="col">Sil</th>
							<th scope="col">Güncelle</th>
						</tr>
					</thead>
					<tbody>

						@foreach (var item in Model)
						{

							<tr>
								<td>@(count++)</td>
								<td>@item.Title</td>
								<td>@item.Description</td>

								<td>
									@if (item.IsActive)
									{
										<div class="badge badge-success">Aktif</div>
									}
									else
									{
										<div class="badge badge-danger">Pasif</div>
									}

								</td>

								<td>
									<a class=" btn btn-outline-danger sweetAlertConfirm" asp-controller="FooterInfo" asp-action="DeleteFooterInfo" asp-route-id="@item.Id">SİL</a>
								</td>
								<td>
									<a class=" btn btn-outline-warning" asp-controller="FooterInfo" asp-action="UpdateFooterInfo" asp-route-id="@item.Id">GÜNCELLE</a>
								</td>
							</tr>
						}


					</tbody>
				</table>

				<a class="btn btn-outline-success" asp-controller="FooterInfo" asp-action="CreateFooterInfo">Yeni Footer Info Girişi</a>
			</div>
		</div>


	</div>

</div>




