@model CreateMailDto

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<div class="row">
    <div class="col-md-12">

        <form method="post" asp-controller="Mail" asp-action="Index">
            <div class="card">
                <div class="card-header">
                    <div class="card-title">Mail gönderme</div>
                </div>
                <div class="card-body">
                    <div class="form-group">
                        <label asp-for="Receiver">Alıcı e-posta</label>
                        <input type="text" class="form-control" asp-for="Receiver">
                    </div>
                    <div class="form-group">
                        <label asp-for="Subject">Konu</label>
                        <input type="text" class="form-control" asp-for="Subject">
                    </div>
                   <div class="form-group">
                        <label asp-for="Content">İçerik</label>
                        <textarea class="form-control" asp-for="Content" rows="5"></textarea>
                    </div>


                  

                </div>
                <div class="card-action">
                    <button class="btn btn-success" type="submit">GÖNDER</button>
                    @* <a class="btn btn-danger" asp-controller="About" asp-action="Index">Geri</a> *@
                </div>
            </div>
        </form>
    </div>

</div>

