@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<script src="~/js/chat.js"></script>



<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>



<script src="~/lib/microsoft/signalr/dist/browser/signalr.min.js"></script>




<div class="container"> 
<h3 class="text-center">SignalR Restaurant Anlık Mesajlaşma</h3>

    <div class="row mb-2">
        <div class="col-md-2 col-sm-4 col">
            <label> Kullanıcı Adı: </label>
        </div>
        <div class="col-md-4 col-sm-8 col">
            <input id="userinput" class=" form-control" placeholder="Kullanıcı adınız" type="text" />
        </div>
    </div> 
    
    
    <div class="row  mb-2">
        <div class="col-md-2 col-sm-4 col">
            <label> Mesajınız: </label>
        </div>
        <div class="col-md-4 col-sm-8 col">
            <input id="messageinput" class="form-control" placeholder="Mesajınız" type="text" />
        </div>
    </div>
        
    <div class="row  mb-2">
        <div class="col-md-2 col-sm-4 col">
           
        </div>
        <div class="col-md-4 col-sm-8 col">
            <input id="sendbutton" class="btn btn-success" placeholder="Mesajınız" type="button" value="Mesaj Gönder"/>
        </div>
    </div>
    <hr />

    <div class="row">
        <ul id="messagelist" class="list-group"></ul>
    </div>
</div>





