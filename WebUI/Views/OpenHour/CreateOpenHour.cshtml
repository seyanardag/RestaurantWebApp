@model CreateOpenHourDtoUI

@{
    ViewData["Title"] = "CreateOpenHour";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<div class="row">
    <div class="col-md-12">

        <form method="post" asp-controller="OpenHour" asp-action="CreateOpenHour">
            <div class="card">
                <div class="card-header">
                    <div class="card-title">Rezervasyon Bilgisi Ekleme</div>
                </div>
                <div class="card-body">
                    <div class="form-group">
                        <label asp-for="OpenDays">Açık Günler</label>
                        <input type="text" class="form-control" asp-for="OpenDays" placeholder="Örneğin; Pazartesi - Cumertesi gibi">
                    </div>
                    <div class="form-group">
                        <label asp-for="OpeningHour">Açılma Saati</label>
                        <input type="text" class="form-control" asp-for="OpeningHour" placeholder="09.00 gibi">
                    </div>
                    <div class="form-group">
                        <label asp-for="ClosingHour">Kapanma Saati</label>
                        <input type="text" class="form-control" asp-for="ClosingHour" placeholder="19.30 gibi">
                    </div>


                    <div class="form-check">
                        <label>Durum</label><br>
                        <label class="form-radio-label">
                            <input class="form-radio-input" type="radio" asp-for="IsActive" value="true" checked="">
                            <span class="form-radio-sign">Aktif</span>
                        </label>
                        <label class="form-radio-label ml-3">
                            <input class="form-radio-input" type="radio" asp-for="IsActive" value="false">
                            <span class="form-radio-sign">Pasif</span>
                        </label>
                    </div>


                </div>
                <div class="card-action">
                    <button class="btn btn-success" type="submit">Ekle</button>
                    <a class="btn btn-danger" asp-controller="OpenHour" asp-action="Index">Geri</a>
                </div>
            </div>
        </form>
    </div>

</div>



