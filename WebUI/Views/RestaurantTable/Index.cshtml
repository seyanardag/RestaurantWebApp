@model List<ResultRestaurantTableDtoUI>

@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/AdminLayout/Index.cshtml";
	int count = 1;
}




<div class="row">
	<div class="col-md-12">
		<div class="card">
			<div class="card-header">
				<div class="card-title">Masa Listesi</div>
			</div>
			<div class="card-body">
				<div class="card-sub">
					Masa işlemlerini burada gerçekleştirebilirsiniz.
				</div>
				<table class="table mt-3">
					<thead>
						<tr>
							<th scope="col">#</th>
							<th scope="col">Masa Adı</th>
							<th scope="col">Durumu</th>
							
							<th scope="col">Sil</th>
							<th scope="col">Güncelle</th>
						</tr>
					</thead>
					<tbody>

						@foreach (var item in Model)
						{

							<tr>
								<td>@(count++)</td>
								<td>@item.TableName</td>
								@if (@item.Status)
								{
									<td> 
									<div class="badge badge-success" >Dolu</div>	
									</td>

								} else
								{
									<td>
										<div class="badge badge-danger">Boş</div>
									</td>
								}

								

								<td>
									<a class=" btn btn-outline-danger sweetAlertConfirm" asp-controller="RestaurantTable" asp-action="DeleteRestaurantTable" asp-route-id="@item.RestaurantTableId">SİL</a>
								</td>
								<td>
									<a class=" btn btn-outline-warning" asp-controller="RestaurantTable" asp-action="UpdateRestaurantTable" asp-route-id="@item.RestaurantTableId">GÜNCELLE</a>
								</td>
							</tr>
						}

					</tbody>
				</table>

				<a class="btn btn-outline-success" asp-controller="RestaurantTable" asp-action="CreateRestaurantTable">Yeni Masa Girişi</a>
			</div>
		</div>


	</div>

</div>




