@model List<ResultSocialMediaDtoUI>

@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/AdminLayout/Index.cshtml";
	int count = 1;
}



<div class="row">
	<div class="col-md-12">
		<div class="card">
			<div class="card-header">
				<div class="card-title">Sosyal Medya Listesi</div>
			</div>
			<div class="card-body">
				<div class="card-sub">
					Sosyal Medya işlemlerini burada gerçekleştirebilirsiniz.
				</div>
				<table class="table mt-3">
					<thead>
						<tr>
							<th scope="col">#</th>

							<th scope="col">Simge</th>
							<th scope="col">Platform</th>
							<th scope="col">Site</th>
							<th scope="col">Durum</th>

							<th scope="col">Sil</th>
							<th scope="col">Güncelle</th>
						</tr>
					</thead>
					<tbody>

						@foreach (var item in Model)
						{

							<tr>
								<td>@(count++)</td>

								<td>@item.Icon</td>
								<td>@item.Platform</td>
								<td>@item.siteUrl</td>


								<td>
									@if (item.IsActive)
									{
										<div class="badge badge-success">Aktif</div>
									}
									else
									{
										<div class="badge badge-danger">Pasif</div>
									}

								</td>


								<td>
									<a class=" btn btn-outline-danger sweetAlertConfirm" asp-controller="SocialMedia" asp-action="DeleteSocialMedia" asp-route-id="@item.SocialMediaId">SİL</a>
								</td>
								<td>
									<a class=" btn btn-outline-warning" asp-controller="SocialMedia" asp-action="UpdateSocialMedia" asp-route-id="@item.SocialMediaId">GÜNCELLE</a>
								</td>
							</tr>
						}


					</tbody>
				</table>

				<a class="btn btn-outline-success" asp-controller="SocialMedia" asp-action="CreateSocialMedia">Yeni Sosyal Medya Bilgisi Girişi</a>
			</div>
		</div>


	</div>

</div>





