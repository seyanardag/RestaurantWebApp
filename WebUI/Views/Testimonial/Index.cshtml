@model List<ResultTestimonialDtoUI>

@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/AdminLayout/Index.cshtml";
	int count = 1;
}


<div class="row">
	<div class="col-md-12">
		<div class="card">
			<div class="card-header">
				<div class="card-title">Müşteri Yorumları Listesi</div>
			</div>
			<div class="card-body">
				<div class="card-sub">
					<p> Müşteri Yorumları işlemlerini burada gerçekleştirebilirsiniz.</p>
					<p><strong> Pasif olan müşteri yorumları sitede gösterilmeyecek yalnız kayıtlı olarak kalacaktır. İstenildiği zaman aktif e çekilebilir.</strong> </p>
					<p><strong>Detaylı olarak görmek istediğiniz resmin üzerine tıklayabilirisiniz</strong></p>

				</div>
				<table class="table mt-3">
					<thead>
						<tr>
							<th scope="col">#</th>
							<th scope="col">Müşteri Fotosu</th>
							<th scope="col">Müşteri Adı</th>
							<th scope="col">Başlık</th>
							<th scope="col">Yorum</th>
							<th scope="col">Durum</th>

							<th scope="col">Sil</th>
							<th scope="col">Güncelle</th>
						</tr>
					</thead>
					<tbody>

						@foreach (var item in Model)
						{

							<tr>
								<td>@(count++)</td>
								<td>

									@await Html.PartialAsync("_modalTemplate", (@item.TestimonialId.ToString(), @item.ImgUrl))


									<!-- Button trigger modal -->
									<button type="button" class="" data-toggle="modal" data-target="#exampleModal_@item.TestimonialId" style="border:none; background:none; cursor:pointer">
																			<img src="@item.ImgUrl" height="70" width="auto" />

									</button>


								</td>
								<td>@item.WriterName</td>
								<td>@item.Title</td>
								<td>@item.Comment</td>



								<td>

									@if (item.Status)
									{
										<div class="badge badge-success">Aktif</div>
									}
									else
									{
										<div class="badge badge-danger">Pasif</div>
									}
								</td>

								<td>
									<a class=" btn btn-outline-danger sweetAlertConfirm" asp-controller="Testimonial" asp-action="DeleteTestimonial" asp-route-id="@item.TestimonialId">SİL</a>
								</td>
								<td>
									<a class=" btn btn-outline-warning" asp-controller="Testimonial" asp-action="UpdateTestimonial" asp-route-id="@item.TestimonialId">GÜNCELLE</a>
								</td>
							</tr>
						}


					</tbody>
				</table>

				<a class="btn btn-outline-success" asp-controller="Testimonial" asp-action="CreateTestimonial">Yeni Müşteri Yorumu Girişi</a>
			</div>
		</div>


	</div>

</div>




									
