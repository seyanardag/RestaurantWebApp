@model UpdateTestimonialDtoUI

@{
    ViewData["Title"] = "UpdateTestimonial";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<div class="row">
    <div class="col-md-12">

        <form method="post" asp-controller="Testimonial" asp-action="UpdateTestimonial" enctype="multipart/form-data">
            <div class="card">
                <div class="card-header">
                    <div class="card-title">Rezervasyon Bilgisi Ekleme</div>
                </div>
                <div class="card-body">

                    <input type="hidden" asp-for="TestimonialId" />

                    <div class="form-group">
                        <label asp-for="WriterName">Müşteri Adı</label>
                        <input type="text" class="form-control" asp-for="WriterName">
                    </div>
                    <div class="form-group">
                        <label asp-for="Title">Başlık</label>
                        <input type="text" class="form-control" asp-for="Title">
                    </div>
                    <div class="form-group">
                        <label asp-for="Comment">Yorum</label>
                        <input type="text" class="form-control" asp-for="Comment">
                    </div>

                    <div class="form-group">
                        <label asp-for="ImgUrl">Müşteri Fotosu</label>
                        <input type="text" class="form-control" asp-for="ImgUrl">
                    </div>

                    <div class="form-group ">
                        <div>Müşteri Fotosu</div>
                        <div class="border border-3 bg-light rounded p-3">

                            <input type="hidden" class="form-control" asp-for="ImgUrl">
                            <label>Eski görsel</label><br />
                            <img src="@Model.ImgUrl" width="150" height="120" /><br />

                            <label class="mt-3">Yeni görseli seçiniz</label><br />
                            <input class="my-2" type="file" asp-for="ImgFile" />
                        </div>
                    </div>



                    <div class="form-check">
                        <label>Durum</label><br>
                        <label class="form-radio-label">
                            <input class="form-radio-input" type="radio" asp-for="Status" value="true">
                            <span class="form-radio-sign">Görünsün</span>
                        </label>
                        <label class="form-radio-label ml-3">
                            <input class="form-radio-input" type="radio" asp-for="Status" value="false">
                            <span class="form-radio-sign">Görünmesin</span>
                        </label>
                    </div>

                </div>
                <div class="card-action">
                    <button class="btn btn-success" type="submit">Güncelle</button>
                    <a class="btn btn-danger" asp-controller="Testimonial" asp-action="Index">Geri</a>
                </div>
            </div>
        </form>
    </div>

</div>



